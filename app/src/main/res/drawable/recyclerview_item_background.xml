<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/line" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp" />
            <solid
                android:color="@color/white" />
        </shape>
    </item>

</layer-list>
